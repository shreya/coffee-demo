<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "CoffeeScript Demo" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults, "post" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
			<h2>CoffeeScript Demo</h2>
	    <div id="main-navigation">
        <ul class="wat-cf">
					<li><%= link_to 'Home', root_path %></li>
					<li> | </li>
			    <li><%= link_to 'Posts', posts_path %></li>
				</ul>
      </div>
			<br />
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
